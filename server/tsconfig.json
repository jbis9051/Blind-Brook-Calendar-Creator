{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "outDir": "build",
    "downlevelIteration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "lib": ["esnext"]
  },
  "include": [
    "src/**/*",
    "app.ts",
    "bin/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
